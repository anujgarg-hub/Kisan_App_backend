<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- plugins:css -->
    <link rel="stylesheet" href="/template/vendors/feather/feather.css">
    <link rel="stylesheet" href="/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="/templat1e/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="/template/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/template/images/favicon.png" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/javascripts/policyfetch.js"></script>
  </head>
  <body>

    <form action="/farmerpolicies/addfarmerpolicies" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
                <h3>Farmer Policies Interface</h3>
            </div>
            <div class="form-group col-md-6">
              <label for="inputEmail4"></label>
              <select class="form-control" style="margin-left: 1px;" name="policyid" id="policyid">
                <option value="">-Policy ID-</option>
            </select>
            </div>

            <div class="form-group col-md-6">
              <label for="inputEmail4"><% if (errors.kisanid) { %>
                <p style="color:red"><%= errors.kisanid.msg %></p>
                <% } %></label>
              <input type="text" class="form-control" value="<%=data.kisanid%>" name="kisanid" placeholder="Kisan ID">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4"><% if (errors.fpdate) { %>
                <p style="color:red"><%= errors.fpdate.msg %></p>
                <% } %></label>
              <input type="date" class="form-control" value="<%=data.fpdate%>" name="fpdate">
            </div>
            <div class="form-group col-md-6">
              <label for="inputEmail4"></label>
              <input type="text" readonly class="form-control" name="status" placeholder="Status" value="Pending">
            </div>
          </div>
        <div class="form-row">
            <!-- <label for="exampleFormControlTextarea1">Example textarea</label> -->
            <% if (message) { %>
                <p style="color:red"><%- message %></p>
                <% } %>
          </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form> 
     </body>
</html>
