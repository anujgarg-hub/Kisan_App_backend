<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- plugins:css -->
    <link rel="stylesheet" href="/template/vendors/feather/feather.css">
    <link rel="stylesheet" href="/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="/templat1e/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="/template/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/template/images/favicon.png" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/javascripts/policyfetch.js"></script>
  </head>
  <body>

    <form action="/farmerpolicies/farmerpoliciesupdesubmit" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <h3>Farmer Policies Interface</h3>
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Select Policy</label>
              <select class="form-control" style="margin-left: 1px;" name="policyid" id="policyid">
                <option value=""><%=data[0].pname%></option>
            </select>
            </div>

            <div class="form-group col-md-6">
              <label for="inputPassword4">Kisan ID</label>
              <input type="hidden" class="form-control" value="<%=data[0].transactionid %>" name="tid" placeholder="Transaction ID">
              <input type="text" class="form-control" value="<%=data[0].kisanid %>" name="kisanid" placeholder="Kisan ID">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Date of Apply</label>
              <input type="date" class="form-control" value="<%=data[0].dateapply %>" name="fpdate">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Status</label>
              <input type="text" readonly class="form-control" value="<%=data[0].status %>" name="status" placeholder="Status" value="Pending">
            </div>
          </div>
        <div class="form-row">
            <% if (message) { %>
                <p style="color:red"><%- message %></p>
                <% } %>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" name="btn" value="Edit" class="btn btn-primary">Edit</button>
            </div>
            <div class="form-group col-md-6">
                <button type="submit" name="btn" value="Delete" class="btn btn-danger">Delete</button>
            </div>
        </div>
      </form> 
     </body>
</html>
